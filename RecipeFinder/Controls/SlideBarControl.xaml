<UserControl x:Class="RecipeFinder.Controls.SlideBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeFinder.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <StackPanel MaxHeight="200" MaxWidth="200" Background="{StaticResource GreyBrush}">
            <Image MaxHeight="170" MaxWidth="170" x:Name="Image" Source="https://w0.peakpx.com/wallpaper/1008/941/HD-wallpaper-pizza-fast-food-pizza-with-sausage-and-olives-food-concepts-background-with-pizza.jpg"></Image>
            <TextBlock x:Name="Label"  FontSize="15" Margin="5" Foreground="White" TextWrapping="WrapWithOverflow" Text="Pizza Włoska że o huj"></TextBlock>
        </StackPanel>   
    </Grid>
</UserControl>
